                  stroke="#121355"
                  stroke-width="1.5"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                />
              </svg>
            </div>

            <div class="form-item">
              <label for="description">Description</label>
              <input
                type="text"
                id="description"
                name="description"
                placeholder="Enter task description"
              />
            </div>

            <div class="form-item">
              <p>Priority</p>
              <div class="form-tags">
                <div class="tag tag-high">
                  <input type="checkbox" id="tagHigh" name="taghigh" />
                  <p>High</p>
                </div>
                <div class="tag tag-medium">
                  <input type="checkbox" id="tagMedium" name="tagmedium" />
                  <p>Medium</p>
                </div>
                <div class="tag tag-low">
                  <input type="checkbox" id="tagLow" name="taglow" />
                  <p>Low</p>
                </div>
              </div>
            </div>
            <div class="form-item">
              <input type="submit" value="Create" />
            </div>
          </form>
        </div>
      </div>
    </div>
